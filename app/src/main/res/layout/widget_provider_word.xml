<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word_widget_word_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="software" />

        <TextView
            android:id="@+id/word_widget_phonetic_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="[fəˈnɛtɪk]" />

        <TextView
            android:id="@+id/word_widget_paraphrase_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="n. 软件" />

        <TextView
            android:id="@+id/word_widget_tag_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="距离四级考试还有266天" />
    </LinearLayout>

    <ImageView
        android:id="@+id/word_widget_refresh_image_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:src="@drawable/widget_word_refresh"
        tools:ignore="ContentDescription" />
</FrameLayout>
